<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.pinaz993.studenttracker.PaperDemo">

    <EditText
        android:id="@+id/wordInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="word"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/nameInput"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/nameInput"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/nameInput" />

    <EditText
        android:id="@+id/integerInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="integer"
        android:layout_marginTop="-58dp"
        app:layout_constraintTop_toBottomOf="@+id/wordInput"
        android:layout_marginLeft="-10dp"
        app:layout_constraintLeft_toLeftOf="@+id/wordInput" />

    <EditText
        android:id="@+id/decimalInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="decimal"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/integerInput"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/integerInput"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/integerInput"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/createBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Object"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/decimalInput"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/decimalInput"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/decimalInput"
        app:layout_constraintHorizontal_bias="0.492" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
